{% extends 'base.jinja' %}
{% block content %}
	<h1>{{title}}</h1>
	<div class="row bg-dark text-primary">
		<div class="col-xs-1-12 bg-dark text-primary">
			<div class="card bg-dark text-primary">
				<div class="card-body bg-dark text-primary">
					<h3 class="card-title bg-dark text-primary">Candlesticks</h3>
					<div  id='candlestick'>
						<script>
							var graph = {{ candlestick}};
							Plotly.plot('candlestick', graph, {});
						</script>
					</div>
				</div>
			</div>
		</div>
		{% if not heatmap%}
			<div class="col-xs-1-12 bg-dark text-primary">
				<div class="card bg-dark text-primary">
					<div class="card-body bg-dark text-primary">
						<h3 class="card-title bg-dark text-primary">Heatmap of energy production</h3>
						<div  id='heatmap'>
							<script>
								var graph = {{ heatmap}};
								Plotly.plot('heatmap', graph, {});
							</script>
						</div>
					</div>
				</div>
			</div>
		{% endif %}
		
		
	{% include "charts.jinja" %}
	</div>
	
{% endblock content %}

